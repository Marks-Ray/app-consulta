<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_consulta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.add.AddConsultaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todos os campos são obrigatorios"
            android:textColor="@android:color/holo_red_light" />

        <EditText
            android:id="@+id/medicoConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Medico"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/pacienteConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Paciente"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/consulta_obs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="observação"
            android:inputType="textPersonName" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/hora_inicial_consulta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/data_inicial_consulta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btn_inicio_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hora inicial" />

                <Button
                    android:id="@+id/btn_inicio_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data inicial" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/hora_final_consulta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/data_final_consulta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btn_final_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora final" />

                <Button
                    android:id="@+id/btn_final_data"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="Data final" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btn_salvarC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="salvar consulta" />

                <Button
                    android:id="@+id/btn_excluirC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button" />

            </TableRow>

        </TableLayout>

    </LinearLayout>
</FrameLayout>